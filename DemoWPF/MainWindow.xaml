<Window x:Class="DemoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWPF"
        mc:Ignorable="d"
        Title="Demo WPF" Height="250" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Button Content="press me to log" Grid.Row="1" Height="40" Width="150" Click="Button_Click" Background="Green" Tag="Log"/>
            <Button Content="press me later to delete" Grid.Row="1" Height="40" Width="150" Click="Button_Click" Background="Pink" Tag="DeleteTempLog"/>
        </StackPanel>
              
         
        
        
        
    </Grid>
</Window>
